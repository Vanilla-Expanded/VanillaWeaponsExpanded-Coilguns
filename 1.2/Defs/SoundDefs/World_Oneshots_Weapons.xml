<Defs>

  <!--========== Gauss rifle ============-->

  <SoundDef>
    <defName>VWE_Interact_GaussRifle</defName>  
    <context>MapOnly</context>  
    <maxSimultaneous>1</maxSimultaneous>  
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>UI/WeaponHandling/HandleWeapon_GaussA</clipPath>
          </li>
        </grains>
        <volumeRange>60~60</volumeRange>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>VWE_Shot_GaussRifle</defName>
    <context>MapOnly</context>
    <maxSimultaneous>1</maxSimultaneous>
    <eventNames />
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Folder">
            <clipFolderPath>Weapon/ShotGaussRifle_1</clipFolderPath>
          </li>
        </grains>
        <pitchRange>0.8376015~0.9169372</pitchRange>
        <volumeRange>69.70588~69.70588</volumeRange>
        <sustainLoop>False</sustainLoop>
      </li>
    </subSounds>
  </SoundDef>

